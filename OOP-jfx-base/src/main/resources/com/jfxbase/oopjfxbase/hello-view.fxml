<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="273.0" prefWidth="266.0" snapToPixel="false" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jfxbase.oopjfxbase.controllers.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text fx:id="helloPrompt" strokeType="OUTSIDE" strokeWidth="0.0" text="Hello {name}" />
   <TextField fx:id="nameField" promptText="Enter your name.." />
    <Button id="sayHelloButton" onAction="#onHelloButtonClick" text="Say hello" />
   <Button id="goToByeScene" onAction="#onGoToAnotherSceneClick" snapToPixel="false" text="Go to another scene" />
</VBox>
